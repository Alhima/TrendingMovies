<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/cold_start</item>
    </style>

    <style name="Detail" />

    <style name="Detail.Text" />

    <style name="Detail.Text.Vote">
        <item name="android:drawableEnd">@drawable/ic_vote</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/ic_vote</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="Detail.Text.Overview">
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>


    <style name="Detail.Text.SimilarShowsLabel">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:text">@string/detail_similar_shows_label</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="Detail.Genres">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="Detail.Genres.Text">
        <item name="android:background">@drawable/genre_chip_background</item>
        <item name="android:elevation">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="Detail.SimilarShows">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <string name="detail_similar_shows_label">Similar shows</string>
</resources>
