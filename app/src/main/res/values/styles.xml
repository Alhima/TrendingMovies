<resources>
    <style name="Movies" />

    <style name="Movies.List">
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">60dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Movies.Text" />

    <style name="Movies.Text.Vote">
        <item name="android:drawableEnd">@drawable/ic_vote</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/ic_vote</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="Detail" />

    <style name="Detail.Text" />

    <style name="Detail.Text.Vote">
        <item name="android:drawableEnd">@drawable/ic_vote</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableLeft">@drawable/ic_vote</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="Detail.Text.Overview">
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>


    <style name="Detail.Text.SimilarMoviesLabel">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:text">@string/detail_similar_movies_label</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="Detail.Genres">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="Detail.Genres.Text">
        <item name="android:background">@drawable/genre_chip_background</item>
        <item name="android:elevation">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="Detail.SimilarMovies">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <string name="detail_similar_movies_label">Similar movies</string>
</resources>
